{
    "openapi": "3.0.0",
    "info": {
        "title": "Reputation AI - Business Reputation Scanner API",
        "description": "Comprehensive business reputation analysis using web search, sentiment analysis, and AI recommendations",
        "contact": {
            "email": "support@reputationai.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "https://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:8000",
            "description": "API Server"
        }
    ],
    "paths": {
        "/api/reputation/scan": {
            "post": {
                "tags": [
                    "Reputation Scan"
                ],
                "summary": "Scan and analyze business reputation",
                "description": "Performs comprehensive business reputation analysis. If place_id is missing and business_name is provided, returns selection_required with candidate businesses.",
                "operationId": "scanReputation",
                "requestBody": {
                    "description": "Business identification data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "website": {
                                        "description": "Optional business website URL",
                                        "type": "string",
                                        "example": "apple.com"
                                    },
                                    "phone": {
                                        "description": "Optional business phone number",
                                        "type": "string",
                                        "example": "+1-555-123-4567"
                                    },
                                    "location": {
                                        "description": "Optional business location (recommended for better matching)",
                                        "type": "string",
                                        "example": "San Francisco, CA"
                                    },
                                    "country": {
                                        "description": "Optional 2-letter country code for Places and search",
                                        "type": "string",
                                        "example": "us"
                                    },
                                    "business_name": {
                                        "description": "Business name (required if no website or phone+location)",
                                        "type": "string",
                                        "example": "Apple Inc"
                                    },
                                    "place_id": {
                                        "description": "Optional Google Places place_id from the selection_required response",
                                        "type": "string",
                                        "example": "ChIJ2eUgeAK6j4ARbn5u_wAGqWA"
                                    },
                                    "skip_places": {
                                        "description": "Set true to skip Google Places selection when no match exists",
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "industry": {
                                        "description": "Optional industry classification",
                                        "type": "string",
                                        "example": "Technology"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Successful reputation scan",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "success"
                                        },
                                        "candidates": {
                                            "type": "array",
                                            "items": {
                                                "type": "object"
                                            }
                                        },
                                        "total": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "business_name": {
                                            "type": "string",
                                            "example": "Apple Inc"
                                        },
                                        "verified_website": {
                                            "type": "string",
                                            "example": "apple.com"
                                        },
                                        "scan_date": {
                                            "type": "string",
                                            "format": "date-time"
                                        },
                                        "results": {
                                            "properties": {
                                                "reputation_score": {
                                                    "type": "number",
                                                    "format": "float",
                                                    "example": 87.5
                                                },
                                                "sentiment_breakdown": {
                                                    "type": "object"
                                                },
                                                "key_themes": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string"
                                                    }
                                                },
                                                "mentions": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object"
                                                    }
                                                },
                                                "recommendations": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "object"
                                                    }
                                                },
                                                "online_profile": {
                                                    "properties": {
                                                        "found": {
                                                            "type": "boolean"
                                                        },
                                                        "visibility_score": {
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 78
                                                        },
                                                        "rating": {
                                                            "type": "number",
                                                            "format": "float",
                                                            "example": 4.4
                                                        },
                                                        "review_count": {
                                                            "type": "integer",
                                                            "example": 120
                                                        },
                                                        "reviews": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "object"
                                                            }
                                                        },
                                                        "website": {
                                                            "type": "string",
                                                            "example": "https://example.com"
                                                        },
                                                        "maps_url": {
                                                            "type": "string"
                                                        },
                                                        "social_links": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            }
                                                        },
                                                        "social_profiles": {
                                                            "type": "array",
                                                            "items": {
                                                                "properties": {
                                                                    "platform": {
                                                                        "type": "string",
                                                                        "example": "facebook"
                                                                    },
                                                                    "url": {
                                                                        "type": "string",
                                                                        "example": "https://facebook.com/example"
                                                                    },
                                                                    "verified": {
                                                                        "type": "boolean",
                                                                        "example": true
                                                                    },
                                                                    "source": {
                                                                        "type": "string",
                                                                        "example": "website"
                                                                    }
                                                                },
                                                                "type": "object"
                                                            }
                                                        },
                                                        "place_id": {
                                                            "type": "string"
                                                        },
                                                        "name": {
                                                            "type": "string"
                                                        },
                                                        "address": {
                                                            "type": "string"
                                                        },
                                                        "source": {
                                                            "type": "string",
                                                            "example": "google_places"
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Missing required identification parameter",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "MISSING_IDENTIFICATION"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Business not found or could not be verified",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "BUSINESS_NOT_FOUND"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "VALIDATION_ERROR"
                                        },
                                        "message": {
                                            "type": "string"
                                        },
                                        "errors": {
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "429": {
                        "description": "Too many requests - rate limit exceeded",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "RATE_LIMIT_EXCEEDED"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error during analysis",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "ANALYSIS_ERROR"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "503": {
                        "description": "Service unavailable - external service error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "status": {
                                            "type": "string",
                                            "example": "error"
                                        },
                                        "error_code": {
                                            "type": "string",
                                            "example": "SERVICE_UNAVAILABLE"
                                        },
                                        "message": {
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "securitySchemes": {
            "bearer": {
                "type": "http",
                "name": "Authorization",
                "in": "header",
                "scheme": "bearer"
            }
        }
    },
    "tags": [
        {
            "name": "Reputation Scan",
            "description": "Reputation Scan"
        }
    ]
}